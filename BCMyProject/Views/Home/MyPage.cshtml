
@{
    ViewData["Title"] = "MyPage";
}

<div class="container" style="margin-top: 10px;">
    <div class="col-md-4">
        <div class="col-md-12">
            @if (ViewBag.User.Avatar != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.User.Avatar))" style="max-width: 100%; height:auto;" title="avatar" />
            }
            else
            {
                <img src="~/images/empty-avatar.png" title="no image" style="max-width: 100%; height:auto;" />
            }
        </div>
        <div class="col-md-12">
            <form asp-action="Avatar" asp-controller="Home" method="post" enctype="multipart/form-data" style="max-width: 100%;">
                <p>
                    <input name="Avatar" type="file" class="form-control" />
                </p>
                <p>
                    <input type="submit" value="Загрузить" class="col-md-4" />
                </p>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="ChangeNick" asp-controller="Home" method="post">
            <p>
                <input name="Nick" type="text" class="form-control" value="@ViewBag.User.Nick" />
            </p>
            <p>
                <input type="submit" value="Изменить" class="col-md-4 col-md-offset-4" />
            </p>
        </form>
    </div>
</div>
<hr />

<div class="container">
    <h2>Заметки</h2>
    <div class="col-md-3">
        <div class="board">
            <span class="glyphicon glyphicon-plus-sign"></span>
        </div>
    </div>
    @foreach (var r in ViewBag.Boards)
    {
        foreach (var t in r.PhotoBoard)
        {
            <div class="col-md-3">
                <div class="board">
                    <img src="@t.Photo.Path" />
                    <h3>@r.BoardName</h3>
                </div>
            </div>
        }
    }
</div>

<div class="container">
    <h2>Фото</h2>
    <div class="masonry-layout" id="target">
        <div class="masonry-layout__panel ">
            <div class="masonry-layout__panel-content ">
                <div class="PhotoInfo">
                    <div class="col-md-4 photo" data-toggle="modal" data-target="#myModal">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                    </div>
                </div>
            </div>
        </div>

        @foreach (var f in ViewBag.Photos)
        {
            <div class="masonry-layout__panel ">
                <div class="masonry-layout__panel-content ">
                    <div class="PhotoInfo">
                        <img src="@Url.Content(f.Path)" class="ImgInfo" />
                        <div class="mask"></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Модальное окно -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Добавление фото</h4>
                <input type="text" name="Topic" id="topic" placeholder="Введи тему картинки" class="form-control"/>
            </div>
            <div class="modal-body">
                <div id="drop-area">
                    <form class="my-form">
                        <p>Загрузите изображения с помощью диалога выбора файлов или перетащив нужные изображения в выделенную область</p>
                        <input type="file" id="fileElem" multiple accept="image/*" onchange="handleFiles(this.files) ">
                        <label class="button" for="fileElem">Выбрать изображения</label>
                    </form>
                    <div id="gallery"></div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="AddFile">Оk</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/DragAndDrop.js"></script>
