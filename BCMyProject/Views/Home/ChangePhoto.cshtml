@model BCMyProject.ViewModels.ChangePhotoViewModel
@{
    ViewData["Title"] = "ChangePhoto";
}

<div class="container">
    <div class="col-md-12">
        <div class="col-md-8 col-md-offset-2" style="text-align: center">
            <img  src="@Url.Content(Model.Photo.Path)" style="margin-bottom: 20px; margin-top: 20px; max-width: 100%; max-height: 70vh" />
            
            <form asp-controller="Home" asp-action="ChangePhoto">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <h5>Тема фото</h5><br />
                        <h5>Описание</h5>
                    </div>
                    <div class="col-md-10" style="text-align: right">
                        <input value="@Model.Photo.Topic" name="topic" class="form-control" spellcheck="false" /><br />
                        <textarea class="form-control" name="description" style="resize: none;" maxlength="500" spellcheck="false">@Model.Photo.Description</textarea><br />
                        <input name="id" value="@Model.Photo.PhotoId" style="display:none;" />
                        <input type="submit" class="btn btn-default" value="Изменить" />
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>

